{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["node"],
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
