{
  "name": "serverless-aws-typescript-barebones",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "James Koshigoe",
  "dependencies": {
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.59",
    "@types/node": "^14.0.1",
    "ndb": "^1.1.5",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "serverless": "^1.77.1",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc",
    "watch:ts": "tsc -w",
    "watch:prettier": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "watch": "npm-run-all --parallel watch:*",
    "sls": "serverless",
    "deploy": "yarn build && sls deploy",
    "invoke": "sls invoke local -f",
    "debug": "ndb sls invoke local -f"
  }
}
